%section.genre
  %header.clearfix
      %h1= @category.name
    %article.row
      - @category_videos.each do |video|
        .video.col-md-2
          = link_to image_tag(video.small_cover_url, class: "img-responsive", id: "small_vid_cover"), video
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating